<Window x:Class="ConfigToolWPF.SubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigToolWPF"
        mc:Ignorable="d"
        Background="#bcc0dd"
        Height="450" Width="800">
    <Grid>
        <ScrollViewer Height="Auto" Margin="50,50,50,100">
            <Grid>
                <TextBlock Name="TxtMergedFile" HorizontalAlignment="Center" TextWrapping="WrapWithOverflow" VerticalAlignment="Top" Width="Auto"
                   Background="LightGray" />
                <TextBox Name="TxtBoxMergedFile" HorizontalAlignment="Center" TextWrapping="WrapWithOverflow" VerticalAlignment="Top" Width="Auto"
                       Background="LightGray" Visibility="Hidden"/>
            </Grid>
        </ScrollViewer>
        <Button Name="BtnEdit" Content="Edit" Click="BtnEdit_OnClick" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Margin="0,0,0,50"/>

    </Grid>
</Window>
